JUST_DEFAULTIFY_FUNCTIONS+=(robodoc_defaultify)
JUST_HELP_FILES+=("${BASH_SOURCE[0]}")

source "${JUST_DIR}/docker_functions.bsh"

#****F*just/just_robodoc_functions
# NAME
#   just_robodoc_functions - ROBODoc plugin for just
# DESCRIPTION
#   robodoc - target that will make robodoc documentation
# INPUTS
#   [$1] - Optional docker location of robodoc rc files, wrt /src dir.
#          Default: /src/robodoc.rc
#   SRC_DIR - Source directory. Default: $JUST_DIR
#   DOC_DIR - Document directory. Default: $JUST_DIR/docs
# AUTHOR
#   Andy Neff
#***
function robodoc_defaultify()
{
  arg=$1
  shift 1
  case $arg in
    robodoc) # Generate robodoc documentation for project, using source dir \
             # ${JUST_DIR-$(pwd)} and documentation dir \
             # ${VSI_DOC_DIR-${JUST_DIR}/docs}. Takes 1 argument for the \
             # robodoc rc file.
      # Override the robodoc target in your Justfile and call __generate-robodoc
      # if you need to set other parameters
      (justify __generate-robodoc ${@+"${@}"})
      extra_args+=$#
      ;;
    __generate-robodoc)
      local SRC_DIR=${SRC_DIR-"${JUST_DIR}"}
      local DOC_DIR=${DOC_DIR-"${JUST_DIR}/docs"}

      if [ "${DRYRUN-}" != "" ]; then
        echo -n "env SRC_DIR=\"${SRC_DIR}\" DOC_DIR=\"${DOC_DIR}\" "
      fi

      COMPOSE_FILE="${JUST_DIR}/robodoc.yml" \
      SRC_DIR="${SRC_DIR}" \
      DOC_DIR="${DOC_DIR}" \
      Just-docker-compose run \
                          -e DOCKER_UID=$(id -u) \
                          -e DOCKER_GID=$(id -g) \
                          robodoc ${1+--rc} ${@+"${1}"}
      extra_args+=${@+1}
      ;;
    *)
      return 1
      ;;
  esac
  return 0
}
